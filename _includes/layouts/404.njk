---
title: Not found
numberOfLatestPostsToShow: 3
---

  {% include "partials/head.njk" %}

  <body>

    {% include "partials/nav.njk" %}

        <div class="section">
            <div class="container">
                <div class="has-text-centered my-6">
                    <h1 class="title is-1 is-spaced">{{ title }}</h1>
                    <h2 class="subtitle is-4">{{ 404Message }}</h2>
                    <a href="/" class="button">{{ 404ButtonText }}</a>
                </div>
            </div>
        </div>

        <div class="section pt-3">

            <div class="container">

                <div class="has-text-centered my-0">
                    <h3 class="subtitle is-4 py-3">{{ 404ConversionMessage }}</h3>
                </div>

                <div class="columns is-variable is-5 is-multiline is-mobile">
                    {# Lastest 3 articles #}
                    
                    {% set postsCount = collections.posts | length %}

                    {% set postslist = collections.posts | head(-1 * numberOfLatestPostsToShow) %}
                    {% set postslistCounter = postsCount %}

                    {%- css %}.postlist { counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }} }{% endcss %}              
                    
                    {% for post in postslist | reverse %}
                    <div class="column is-one-third-tablet is-full-mobile mb-5">
                    {% include "partials/card.njk" %}
                    </div>
                    {% endfor %}

                </div>

            </div>

        </div>

    {% include "partials/footer.njk" %}

  </body>

</html>