<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5">

    <!-- <meta http-equiv="Content-Security-Policy" content="default-src 'self'"> -->

    <title>{{ metaTitle60Chars }}</title>
    <meta name="description" content="{{ description or site.description }}">

    <!-- DNS Prefetch: Current domain and any external resources, eg: fonts -->
    <link rel="dns-prefetch" href="{{ metadata.url }}">

    <!-- CSS Plugins -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Crete+Round&family=Work+Sans:wght@500;600&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="/assets/css/dewalters-css-bundle.css">

    <!-- Me -->
    <meta name="author" content="{{ metadata.author.name }}" />
    <link href="mailto:{{ metadata.author.email }}" rel="me">
    <!-- <link href="sms:+640210000000" rel="me" /> -->
    <link href="{{metadata.social.twitter}}" rel="me">
    <link href="{{metadata.social.linkedin}}" rel="me">
    <link href="{{metadata.social.github}}" rel="me">
    <link href="{{metadata.social.instagram}}" rel="me">
    <link href="{{metadata.social.bluesky}}" rel="me">

    <!-- Manifest and browserconfig -->
    <link rel="manifest" href="/site.webmanifest?v=zX7lz2GQ2G">
    <meta name="msapplication-config" content="browserconfig.xml?v=zX7lz2GQ2G" />
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    <!-- Favicons for all! -->
    <link rel="apple-touch-icon" sizes="180x180" href="/img/favicon/apple-touch-icon.png?v=zX7lz2GQ2G">
    <link rel="icon" type="image/png" sizes="32x32" href="/img/favicon/favicon-32x32.png?v=zX7lz2GQ2G">
    <link rel="icon" type="image/png" sizes="16x16" href="/img/favicon/favicon-16x16.png?v=zX7lz2GQ2G">
  
    <link rel="mask-icon" href="/img/favicon/safari-pinned-tab.svg?v=zX7lz2GQ2G" color="#da532c">
    <link rel="shortcut icon" href="/img/favicon/favicon.ico?v=zX7lz2GQ2G">

    {% if layout === 'post.njk' or layout === 'post-minimal.njk' %}
      <meta property="og:site_name" content="{{metadata.title}}" />
      <meta property="og:type" content="article" />
      <meta name="twitter:card" content="summary" />
      <meta property="og:title" content="{{ title }}" />
      <meta property="og:description" content="{{ description }}" />
      {% if permalink %}
        <meta property="og:url" content="https://{{metadata.domain}}{{ permalink }}" />
        {% else %}
        <meta property="og:url" content="https://{{metadata.domain}}{{ page.filePathStem }}/" />
      {% endif %}

      {% if featuredImage !== undefined %}
        <meta property="og:image" content="https://{{metadata.domain}}{{featuredImage}}" />
        {% else %}
        <meta property="og:image" content="https://{{metadata.domain}}/img/default.jpg" />
      {% endif %}

    {% endif %}
  </head>